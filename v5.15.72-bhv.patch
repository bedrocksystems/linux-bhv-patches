+		pr_err("file protection violation hypercall failed");
+		kmem_cache_free(bhv_file_protection_violation_cache, violation);
+		return true;
+	}
+
+	// Read block and free
+	rv = (bool)violation->block;
+	kmem_cache_free(bhv_file_protection_violation_cache, violation);
+	return rv;
+}
