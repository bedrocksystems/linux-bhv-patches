+static bool __bhv_text bhv_optimize_nops(struct alt_instr *a, u8 *instr,
+					 bhv_patch_arg_t *bhv_arg, bool patch)
+{
+	int i;
+
+	for (i = 0; i < a->padlen; i++) {
+		if (instr[i] != 0x90) {
+			return false;
+		}
+	}
+
+	bhv_add_nops(instr + (a->instrlen - a->padlen), a->padlen, bhv_arg,
+			 patch);
+	return true;
+}
