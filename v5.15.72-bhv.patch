+void __init_km bhv_setup_sysfs_reg_protect(struct kobject *kobj)
+{
+	int i;
+	const struct attribute *attr_array[BHV_NUM_FREEZABLE_REGISTERS + 1];
+
+	for (i = 0; i < ARRAY_SIZE(_bhv_rp_sysfs_data); ++i)
