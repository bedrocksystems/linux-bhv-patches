+	va_list args;
+	guestlog_msg_t msg;
+	size_t sz;
+
+	// format string and set vector
+	va_start(args, fmt);
+	len = 1 /* null terminator */ +
+	      vscnprintf(msg.str.buf, BHV_GUESTLOG_MAX_MSG_DATA_SZ, fmt, args);
